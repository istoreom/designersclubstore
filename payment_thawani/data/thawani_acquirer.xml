<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="payment_acquirer_thawani" model="payment.acquirer">
            <field name="name">Thawani</field>
            <field name="image_128" type="base64" file="payment_thawani/static/src/img/thawani.png"/>
            <field name="provider">thawani</field>
            <field name="company_id" ref="base.main_company"/>
            <field name="redirect_form_view_id" ref="redirect_form"/>
            <field name="state">test</field>
            <field name="pre_msg"><![CDATA[
                <p>You will be redirected to the Thawani website after clicking on the payment button.</p>]]>
            </field>
            <field name="thawani_secret_key">dummy</field>
            <field name="thawani_publishable_key">dummy</field>
            <field name="thawani_payment_url">https://uatcheckout.thawani.om</field>
        </record>

         <record id="payment_method_thawani" model="account.payment.method">
            <field name="name">Thawani</field>
            <field name="code">thawani</field>
            <field name="payment_type">inbound</field>
        </record>
    </data>
</odoo>