<odoo>
    <data>
        <record id="provider_form_for_thawani_checkout" model="ir.ui.view">
            <field name="name">provider.form.thawani.checkout</field>
            <field name="model">payment.provider</field>
            <field name="inherit_id" ref="payment.payment_provider_form"/>
            <field name="arch" type="xml">
                <group name="provider_credentials" position="inside">
                    <group invisible="code != 'thawani_checkout'">
                        <field name="thawani_public_key"/>
                        <field name="thawani_secret_key"/>
                    </group>
                </group>
            </field>
        </record>
    </data>
</odoo>
