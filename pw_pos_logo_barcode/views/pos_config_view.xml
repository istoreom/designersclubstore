<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_config_view_form_inherit_pos_logo" model="ir.ui.view">
        <field name="name">pos.config.form.inherit.pos.logo</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_interface_section']" position="inside">
                <setting help="Set logo and barcode on pos receipt">
                    <field name="receipt_logo"/>
                    <div class="content-group mt16" invisible="not receipt_logo">
                        <field name="logo_setting" class="o_light_label" widget="radio"/>
                    </div>
                    <div class="content-group mt16" invisible="logo_setting == 'use_company_logo' or not receipt_logo">
                        <field name="pw_pos_logo" widget="image" class="oe_avatar" style="float: left;"/>
                    </div>
                    <div class="content-group mt16" invisible="logo_setting == 'use_pos_logo' or not receipt_logo">
                        <field name="logo" widget="image" class="oe_avatar" style="float: left;"/>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
